{
  "title": "For Japanese （日本語環境向けの設定） (mine)",
  "rules": [
    {
      "description": "ctrl + cmd keyを押したときに、英数・かなキーを送信する。（左コマンドキーは英数、右コマンドキーはかな）",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "mandatory": [ "control" ]
            }
          },
          "to_if_alone": [
            { "key_code": "japanese_eisuu" }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "mandatory": [ "control" ]
            }
          },
          "to_if_alone": [
            { "key_code": "japanese_kana" }
          ]
        }
      ]
    }
  ]
}
