{
    "workbench.colorTheme": "crayon-vscode",
    "workbench.startupEditor": "newUntitledFile",
    // Open file in new tab
    "workbench.editor.enablePreview": false,
    "files.trimTrailingWhitespace": true,
    "editor.renderControlCharacters": true,
    "editor.stickyScroll.enabled": true,
    "editor.wordWrap": "off",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.renderWhitespace": "all",
    // indentに使う文字．
    "editor.insertSpaces": true,
    // tabのサイズ．
    "editor.tabSize": 2,
    // snippetをtabで展開できるようにする．
    "editor.tabCompletion": "on",
    // editorのfont size
    "editor.fontSize": 14,
    // editor.wordSeparators: 単語単位での移動を行う場合の区切り文字を指定
    "editor.stickyScroll.maxLineCount": 10,
    // 日本語文書で単語移動を使うため、助詞や読点、括弧を区切り文字として指定する
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.copyWithSyntaxHighlighting": false,
    "extensions.ignoreRecommendations": false,
    "extensions.autoUpdate": false,
    // 時計のフォーマット．clock extension. ----------------------
    "clock.active": true,
    "clock.format": "mmmm dS, dddd, h:MM tt",
    "clock.updateInterval": 1000,
    "clock.alignment": "Right",
    // "clock.priority": 10, // i dont know what is for...
    "clock.iconName": "clock",
    // Python設定
    // "python.languageServer":. "Pylance",
    "python.analysis.typeCheckingMode":"basic",
    // "python.formatting.blackPath": "black",
    // "python.linting.flake8Path": "flake8",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    // "python.linting.flake8Enabled": true,
    "python.linting.flake8Enabled": false,
    // "python.linting.lintOnSave": true,
    "python.linting.lintOnSave": false,
    // "python.defaultInterpreterPath": "/Users/yutaro.ueno/.pyenv/versions/3.9.1/envs/glo",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "isort.args": [
        "--profile=black"
    ],
    "[python]": {
        // pyhtonの時はインデントを4
        "editor.tabSize": 4,
        // "editor.formatOnSave": true,
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll.ruff": true
        },
        "editor.formatOnType": true
    },
    "python.formatting.provider": "black",
    "ruff.organizeImports": false,
    "ruff.args": ["--line-length=120"],
    // sqlの時はインデントを4
    "[sql]": {
        "editor.tabSize": 4
    },
    // [markdown] 言語に対して上書きされるエディター設定を構成します。
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.snippetSuggestions": "top"
    },
    // markdownの数式レンダリングをmathjaxで行う．
    "markdown-preview-enhanced.mathRenderingOption": "MathJax",
    // Open only one preview.
    "markdown-preview-enhanced.singlePreview": true,
    // https://qiita.com/kumapo0313/items/a59df3d74a7eaaaf3137#テーブルの-colspanrowspan-に対応
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.codeBlockTheme": "github.css",
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "markdown-preview-enhanced.scrollSync": false,
    // "markdown.preview.scrollEditorWithPreview": false,
    // "markdown.preview.scrollPreviewWithEditor": false,
    // Vim
    // Vimの検索コマンド時のハイライト表示
    "vim.hlsearch": true,
    // Vimの無名レジスタとクリップボードを同期
    // "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vimrc",
    // undoが効かなくなっているissue. VSCodeのupgradeで起きているらしい、治るまで↓で対応.
    // https://github.com/VSCodeVim/Vim/issues/8157#issuecomment-1400217493
    "vim.normalModeKeyBindingsNonRecursive": [
        // Undo & Redo
        { "before": ["u"], "commands": ["undo"] },
        { "before": ["c-r"], "commands": ["redo"] }
      ],
    // https://stackoverflow.com/questions/50888475/code-folds-are-automatically-opened-when-cursor-moves-over-them-in-vs-code-vim
    "vim.foldfix": true,
    // TODO high light
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "NOTE:",
            "backgroundColor": "#3cb371",
            "overviewRulerColor": "#3cb371",
            "color": "#ffffff",
            "isWholeLine": false,
        },
        {
            "text": "CHECK:",
            "backgroundColor": "#f08080",
            "overviewRulerColor": "#f08080",
            "color": "#ffffff",
            "isWholeLine": false,
        },
    ],
